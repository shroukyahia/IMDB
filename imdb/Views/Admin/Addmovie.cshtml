@model IList<imdb.Models.director>
@{
    ViewBag.Title = "Add movie";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}


<body style="background-color: #F6F6F6;">
    <form class="join mx-0 mb-5 " method="post" action="/Admin/Addmovie" enctype="multipart/form-data">
        <h2 class="text-primary text-center mt-5">Add New Movie</h2>
        <div class="row mx-0 mb-5 mt-5">
            <div class="container">
                <div class="form-div rounded shadow">

                    <div class="row mx-0 ">
                        <div class="col-12 form-section ">

                            <div class=" p-1 pt-2  pr-5 form-div__input-container">
                                <label for="exampleFormControlInput1" class="form-label form-div__form-label">Movie Name</label>
                                <input type="text" name="name" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class=" p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Description</label>
                                <input type="text" name="description" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Movie Banner</label>
                                <input class="form-control form-div__form-control" type="file" name="photo" />
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label me-2">Director</label>

                                <select name="director" class="form-select form-select-md mb-3">
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <option value="@item.id">@item.FirstName @item.LastName</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="d-grid gap-2 mb-2 mt-1">
                                <button class="btn btn-primary" type="submit" >Submit</button>
                              
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

