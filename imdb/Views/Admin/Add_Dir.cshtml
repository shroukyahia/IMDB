
@{
    ViewBag.Title = "Add_Dir";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}



<body style="background-color: #F6F6F6;">
    <form class="join mx-0 mb-5 " method="post" action="/admin/add_Dir" enctype="multipart/form-data">
        <h2 class="text-primary text-center mt-5">Add New Director</h2>
        <div class="row mx-0 mb-5 mt-5">
            <div class="container">
                <div class="form-div rounded shadow">

                    <div class="row mx-0 ">
                        <div class="col-12 form-section ">

                            <div class=" p-1 pt-2  pr-5 form-div__input-container">
                                <label for="exampleFormControlInput1" class="form-label form-div__form-label"> First Name</label>
                                <input type="text" name="firstname" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class=" p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Last Name</label>
                                <input type="text" name="lastname" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class=" p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Born</label>
                                <input type="text" name="Age" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Photo</label>
                                <input class="form-control form-div__form-control" type="file" name="photo" />
                            </div>
                            <div class="d-grid gap-2 mb-2 mt-4">
                                <button class="btn btn-primary" type="submit">Submit</button>

                            </div>
                        </div>

                        

                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
