@model IList<imdb.Models.movie>
@using imdb.Models;
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/cover1.png" class="d-block w-100 " height="530px" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/images/cover2.png" class="d-block w-100" height="530px" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/images/cover3.png" class="d-block w-100" height="530px" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container">
    <div class="row mt-5 text-center">
        @{ foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <a href="/home/movieUser/@item.id" class="text-decor">
                        <div class="card border-warning shadow  mb-5 bg-white ">
                            <div class="card-body ">
                                <img src="@item.photo" alt="" class="img-fluid  w-100 mb-3">
                                <h3>@item.name</h3>
                                <p><i class="fa fa-thumbs-up"></i> @item.Likes.Where(x => x.like == true).Count()</p>

                                <p><i class="fa fa-thumbs-down"></i> @item.Likes.Where(x => x.like == false).Count()</p>
                                <p class="parag-movie">
                                    @item.description
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>

