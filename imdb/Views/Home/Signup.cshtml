@{
    ViewBag.Title = "Signup";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body style="background-color: #F6F6F6;">
    <form class="join mx-0 mb-5" method="post" action="/home/signup" enctype="multipart/form-data">
        <div class="row mx-0 mb-5 ">
            <div class="container">
                <img class="img-fluid img-register col-12" src="~/images/logoRegister.png">
                <div class="form-div rounded shadow">

                    <div class="row mx-0 ">
                        <div class="col-12 form-section ">

                            <div class=" p-1 pt-1  pr-5 form-div__input-container">
                                <label for="exampleFormControlInput1" class="form-label form-div__form-label">FirstName</label>
                                <input type="text" name="fname" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class=" p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">LastName</label>
                                <input type="text" name="lname" class="form-control form-div__form-control" placeholder="">
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Username</label>
                                <input class="form-control form-div__form-control" name="uname" type="text" />
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">Password</label>
                                <input class="form-control form-div__form-control" type="password" name="pass" />
                            </div>
                            <div class="p-1 pr-5 form-div__input-container">
                                <label class="form-label form-div__form-label">ProfilePicture</label>
                                <input class="form-control form-div__form-control" type="file" name="photo" />
                            </div>
                            <button class="btn text-white form-div__btn mb-3  mt-2" type="submit">Submit</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

